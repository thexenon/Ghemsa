<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thexenon.ghemsaapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GhemsaApp">
        <activity
            android:name=".activities.AboutActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LabWorksActivity"
            android:exported="false" />
        <activity
            android:name=".activities.NewsLargeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PastQuesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SlidesActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity2"
            android:exported="false" />
        <activity
            android:name=".activities.VideoActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>




        <activity
            android:name=".chats.messages.LatestMessagesActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".chats.ui.register.RegisterActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".chats.messages.NewMessageActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chats.messages.LatestMessagesActivity"/>
        </activity>
        <activity
            android:name=".chats.messages.ChatLogActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chats.messages.LatestMessagesActivity"/>
        </activity>
    </application>

</manifest>